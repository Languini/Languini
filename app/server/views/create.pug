extends layout

block content
  <form class="pa4 black-80">
    <div class="measure">
      <label for="name" class="f6 b db mb2">Request <span class="normal black-60">(required)</span></label>
      <input id="name" class="input-reset ba b--black-20 pa2 mb2 db w-100" type="text" aria-describedby="name-desc">
      <small id="name-desc" class="f6 black-60 db mb2">Enter the exact sentence(s) you would like translated</small>
    </div>
    <br>
    <div>
      <label for="comment" class="f6 b db mb2">Context <span class="normal black-60">(recommended)</span></label>
      <textarea id="comment" name="comment" class="db border-box hover-black w-100 measure ba b--black-20 pa2 br2 mb2" aria-describedby="comment-desc"></textarea>
      <small id="comment-desc" class="f6 black-60">This will help users understand the context for your request, improving the accuracy of the translations.</small>
    </div>
    <div class="ph3 mt4">
      <a class="f6 link dim br2 ba bw1 ph3 pv2 mb2 dib black" href="#0">Submit</a>
    </div>
  </form>

extends layout

block content
  include includes/nav.pug

  case user
    when undefined
      h1(class="ph6 f2 lh-copy") You are not signed in! Sign in via 'auth/facebook'
      break
    default
      h1(class="ph6 f2 lh-copy") Create A Request
      form(id='post-form' class="ph6 black-100" method='post')
        div(class="measure")
          label(for="name" class="f6 b db mb2") Request
            span(class="normal black-60")  (required)
          input(id="request" class="input-reset ba b--black-20 pa2 mb2 db w-100" type="text" aria-describedby="name-desc")
          small(id="request-desc" class="f6 black-60 db mb2") Enter the exact sentence(s) you would like translated
        p
          label(class="f6 b db mb2") Please select a language
            -
              var langs = ['Arabic', 'Bosnian','Bulgarian', 'Catalan', 'Chinese Simplified', 'Chinese Traditional', 'Croatian', 'Czech',
              'Danish', 'Dutch', 'English', 'Estonian', 'Finnish', 'French', 'German', 'Greek', 'Haitian Creole', 'Hebrew',
              'Hindi', 'Hmong Daw', 'Hungarian', 'Indonesian', 'Italian', 'Japanese', 'Kiswahili', 'Korean', 'Latvian', 'Lithuanian',
              'Malay', 'Maltese', 'Norwegian', 'Persian', 'Polish', 'Portuguese', 'Romanian', 'Russian', 'Serbian (Cyrillic)', 'Serbian (Latin)',
              'Slovak', 'Slovenian', 'Spanish', 'Swedish', 'Thai', 'Turkish', 'Ukrainian', 'Urdu', 'Vietnamese', 'Welsh', 'Yucatec Maya']
            select(id = "languages")
              each lang in langs
                option(value = lang)=lang
        br
        div
          label(for="context" class="f6 b db mb2") Context
            span(class="normal black-60")  (required)
          textarea(id="context" name="comment" class="db border-box hover-black w-100 measure-wide ba b--black-20 pa2 br2 mb2" aria-describedby="comment-desc")
          small(id="context-desc" class="f6 black-60") This will help users understand the context for your request, improving the accuracy of the translations.
        div(class="mt4")
          a(id="submit-post" class="f6 link dim br2 ba bw1 ph3 pv2 mb2 dib black" href="") Submit
  include includes/footer.pug
  script(src='../../static/dist/bundle.min.js')
